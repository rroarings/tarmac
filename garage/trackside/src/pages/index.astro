---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { getCollection } from "astro:content";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Faqs from "../components/Faqs.astro";

const recentPosts = await getCollection("blog");
---

<html lang="en">
  <head>
    <BaseHead title="Blog Home" description="Lorem ipsum dolor sit amet" />
  </head>
  <body>
    <Header />

    <!-- Hero Section -->
    <section
      class="text-center mb-12 bg-indigo-50 pt-16 pb-12 mt-16 rounded-lg"
    >
      <h1 class="text-5xl font-extrabold mb-4">Welcome to {SITE_TITLE}</h1>
      <p class="text-lg text-gray-700 mb-6">{SITE_DESCRIPTION}</p>
      <a
        href="/blog"
        class="inline-block bg-indigo-600 text-white py-3 px-6 rounded-lg shadow hover:bg-indigo-700 transition"
        >Explore Recent Posts</a
      >
    </section>

    <!-- Top Stories Section -->
    <section
      class="mb-12 py-12 bg-white rounded-lg max-w-2xl md:max-w-4xl lg:max-w-5xl mx-auto"
    >
      <h2 class="text-3xl font-semibold text-center mb-6">Recent Stories</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {
          recentPosts &&
            recentPosts.slice(0, 3).map((post) => (
              <div class="p-6 bg-gray-50 rounded-lg border border-gray-200 hover:border-indigo-500 transition">
                <h3 class="text-lg text-indigo-600 mb-2">{post.data.title}</h3>
                <p class="text-gray-600 mb-4">{post.data.description}</p>
                <a
                  href={`/blog/${post.id}`}
                  class="text-indigo-500 hover:underline font-medium"
                >
                  Read More â†’
                </a>
              </div>
            ))
        }
      </div>
    </section>

    <!-- Unique Section: Featured Categories -->
    <section
      class="mb-12 py-12 bg-gray-50 rounded-lg max-w-2xl md:max-w-4xl lg:max-w-6xl mx-auto"
    >
      <h2 class="text-3xl font-bold text-center text-indigo-700 mb-6">
        Explore Our Categories
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div
          class="p-6 bg-white rounded-lg border border-gray-200 hover:border-indigo-500 transition"
        >
          <h3 class="mb-2">Technology</h3>
          <p class="text-gray-600">
            Discover the latest advancements and trends in automotive
            technology.
          </p>
        </div>
        <div
          class="p-6 bg-white rounded-lg border border-gray-200 hover:border-indigo-500 transition"
        >
          <h3 class="mb-2">Racing Insights</h3>
          <p class="text-gray-600">
            Get in-depth analysis and updates from the world of motorsports.
          </p>
        </div>
        <div
          class="p-6 bg-white rounded-lg border border-gray-200 hover:border-indigo-500 transition"
        >
          <h3 class="mb-2">Lifestyle</h3>
          <p class="text-gray-600">
            Explore the culture and lifestyle surrounding the automotive world.
          </p>
        </div>
      </div>
    </section>

    <Faqs />

    <Footer />
  </body>
</html>
