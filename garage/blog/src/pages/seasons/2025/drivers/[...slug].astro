---
import BaseHead from "../../../../components/BaseHead.astro";
import Header from "../../../../components/Header.astro";
import Footer from "../../../../components/Footer.astro";
import { SITE_TITLE } from "../../../../consts";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const drivers = await getCollection("drivers", ({ data }) => {
    return data.season === "2025";
  });

  return drivers.map((driver) => ({
    params: { slug: driver.id },
    props: { driver },
  }));
}

const { driver } = Astro.props;
// Import the Content component separately
import { render } from "astro:content";
const { Content } = await render(driver);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={`${driver.data.firstName} ${driver.data.lastName} | ${SITE_TITLE}`}
      description={`2025 F1 driver profile for ${driver.data.firstName} ${driver.data.lastName} driving for ${driver.data.team}`}
    />
  </head>
  <body>
    <Header />
    <main>
      <!-- Driver Profile Header -->
      <section class="py-16">
        <div class="container mx-auto px-4">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
            <div>
              <img
                src={driver.data.profileImage &&
                driver.data.profileImage.startsWith("/blog-placeholder")
                  ? driver.data.profileImage
                  : "/blog-placeholder-1.jpg"}
                alt={`${driver.data.firstName} ${driver.data.lastName}`}
                class="w-full h-64 object-cover p-3"
              />
            </div>
            <div>
              <h1 class="text-4xl font-bold mb-4">
                {driver.data.firstName}
                <span class="">{driver.data.lastName}</span>
              </h1>
              <div class="space-y-3 text-lg">
                <div class="flex items-center">
                  <span class="font-semibold w-32">Number:</span>
                  <span class="px-3 py-1 rounded font-bold"
                    >#{driver.data.number}</span
                  >
                </div>
                <div class="flex items-center">
                  <span class="font-semibold w-32">Team:</span>
                  <span class="text-gray-700">{driver.data.team}</span>
                </div>
                <div class="flex items-center">
                  <span class="font-semibold w-32">Nationality:</span>
                  <span class="text-gray-700">{driver.data.nationality}</span>
                </div>
                <div class="flex items-center">
                  <span class="font-semibold w-32">Age:</span>
                  <span class="text-gray-700">{driver.data.age}</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Driver Statistics -->
      <section class="py-12">
        <div class="container mx-auto px-4">
          <h2 class="text-3xl font-bold mb-10 text-center relative">
            <span class="inline-block pb-2">Career Statistics</span>
          </h2>

          <div class="flex flex-wrap justify-center">
            <div class="w-full max-w-4xl mx-auto">
              <div class="flex flex-wrap -mx-2">
                <!-- Championships -->
                <div class="w-1/2 md:w-1/4 px-2 mb-6">
                  <div
                    class="border border-gray-300 rounded-lg transition duration-300 hover:border-gray-400"
                  >
                    <div class="p-6 text-center">
                      <div class="text-4xl font-bold mb-1">
                        {driver.data.championships}
                      </div>
                      <div
                        class="text-sm text-gray-600 uppercase tracking-wide"
                      >
                        Championships
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Race Wins -->
                <div class="w-1/2 md:w-1/4 px-2 mb-6">
                  <div
                    class="border border-gray-300 rounded-lg transition duration-300 hover:border-gray-400"
                  >
                    <div class="p-6 text-center">
                      <div class="text-4xl font-bold mb-1">
                        {driver.data.raceWins}
                      </div>
                      <div
                        class="text-sm text-gray-600 uppercase tracking-wide"
                      >
                        Race Wins
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Podiums -->
                <div class="w-1/2 md:w-1/4 px-2 mb-6">
                  <div
                    class="border border-gray-300 rounded-lg transition duration-300 hover:border-gray-400"
                  >
                    <div class="p-6 text-center">
                      <div class="text-4xl font-bold mb-1">
                        {driver.data.podiums}
                      </div>
                      <div
                        class="text-sm text-gray-600 uppercase tracking-wide"
                      >
                        Podiums
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Points -->
                <div class="w-1/2 md:w-1/4 px-2 mb-6">
                  <div
                    class="border border-gray-300 rounded-lg transition duration-300 hover:border-gray-400"
                  >
                    <div class="p-6 text-center">
                      <div class="text-4xl font-bold mb-1">
                        {driver.data.points}
                      </div>
                      <div
                        class="text-sm text-gray-600 uppercase tracking-wide"
                      >
                        Career Points
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Driver Biography -->
      <section class="py-12">
        <div class="prose prose-lg max-w-none">
          <Content />
        </div>
      </section>

      <!-- Back Links -->
      <section class="py-8 text-center">
        <div class="space-x-4">
          <a
            href="/seasons/2025/drivers"
            class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
          >
            ← Back to 2025 Drivers
          </a>
          <a
            href="/seasons/2025"
            class="bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded"
          >
            ← Back to 2025 Season
          </a>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
