---
import BaseHead from "../../../components/BaseHead.astro";
import Header from "../../../components/Header.astro";
import Footer from "../../../components/Footer.astro";
import RaceCalendar from "../../../components/RaceCalendar.astro";
import { SITE_TITLE } from "../../../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={`2025 F1 Season | ${SITE_TITLE}`}
      description="Complete 2025 Formula 1 race calendar and season overview"
    />
  </head>
  <body>
    <Header />
    <main>
      <!-- 2025 Season Header -->
      <section class="pt-6 pb-6 text-center">
        <div class="container mx-auto px-4">
          <h1 class="text-4xl font-bold mb-4">2025 Formula 1 Season</h1>
          <p class="text-lg text-gray-700">
            Complete race calendar and season overview
          </p>
        </div>
      </section>

      <!-- Quick Links -->
      <section class="py-6">
        <div class="container mx-auto px-4">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Drivers Link -->
            <div
              class="bg-gray-100 border border-gray-300 rounded p-6 text-center"
            >
              <i class="bi bi-person-badge text-4xl text-gray-700 mb-4"></i>
              <h3 class="text-xl font-bold mb-2">2025 Drivers</h3>
              <p class="text-gray-600 mb-4">
                Explore driver profiles and statistics
              </p>
              <a
                href="/seasons/2025/drivers"
                class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded"
                >View Drivers</a
              >
            </div>

            <!-- Teams Link -->
            <div
              class="bg-gray-100 border border-gray-300 rounded p-6 text-center"
            >
              <i class="bi bi-flag text-4xl text-gray-700 mb-4"></i>
              <h3 class="text-xl font-bold mb-2">2025 Teams</h3>
              <p class="text-gray-600 mb-4">
                Learn about constructor teams and their cars
              </p>
              <a
                href="/seasons/2025/teams"
                class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded"
                >View Teams</a
              >
            </div>
          </div>
        </div>
      </section>

      <!-- Race Calendar -->
      <section class="py-6">
        <div class="container mx-auto px-4">
          <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold">Race Calendar</h2>
            <a
              href="/seasons/2025/races"
              class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded"
            >
              View All Races
            </a>
          </div>
          <RaceCalendar season="2025" />
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
