---
import BaseHead from "../../../../components/BaseHead.astro";
import Header from "../../../../components/Header.astro";
import Footer from "../../../../components/Footer.astro";
import RaceCalendar from "../../../../components/RaceCalendar.astro";
import { SITE_TITLE } from "../../../../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={`2024 F1 Races | ${SITE_TITLE}`}
      description="Complete list of races for the 2024 Formula 1 season"
    />
  </head>
  <body>
    <Header />
    <main>
      <!-- 2024 Races Header -->
      <section class="pt-6 pb-6 text-center">
        <div class="container mx-auto px-4">
          <h1 class="text-4xl font-bold mb-4">2024 Formula 1 Races</h1>
          <p class="text-lg text-gray-700">
            Complete race calendar for the 2024 season
          </p>
        </div>
      </section>

      <!-- Race Calendar -->
      <section class="py-6">
        <div class="container mx-auto px-4">
          <RaceCalendar season="2024" />
        </div>
      </section>

      <!-- Navigation -->
      <section class="py-6">
        <div class="container mx-auto px-4 flex justify-between">
          <a
            href="/seasons/2024"
            class="inline-block bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded"
          >
            Back to 2024 Season
          </a>
          <a
            href="/seasons/2025/races"
            class="inline-block bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded"
          >
            View 2025 Races
          </a>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
