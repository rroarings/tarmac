---
import BaseHead from "../../../../components/BaseHead.astro";
import Header from "../../../../components/Header.astro";
import Footer from "../../../../components/Footer.astro";
import BreakpointIndicator from "../../../../components/BreakpointIndicator.astro";
import { SITE_TITLE } from "../../../../consts";
import { getCollection, getEntry } from "astro:content";
import StatCard from "../../../../components/StatCard.astro";

export async function getStaticPaths() {
  const drivers = await getCollection("drivers", ({ data }) => {
    return data.season === "2024";
  });

  return drivers.map((driver) => ({
    params: { slug: driver.id },
    props: { driver },
  }));
}

const { driver } = Astro.props;
// Import the Content component separately
import { render } from "astro:content";
const { Content, headings } = await render(driver);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={`${driver.data.firstName} ${driver.data.lastName} | ${SITE_TITLE}`}
      description={`2024 F1 driver profile for ${driver.data.firstName} ${driver.data.lastName} driving for ${driver.data.team}`}
    />
  </head>
  <body>
    <BreakpointIndicator />
    <Header />
    <main>
      <!-- Driver Profile Header -->
      <section class="py-16 bg-gray-50">
        <div class="container mx-auto px-4">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
            <div>
              <img
                src={driver.data.profileImage &&
                driver.data.profileImage.startsWith("/blog-placeholder")
                  ? driver.data.profileImage
                  : "/blog-placeholder-1.jpg"}
                alt={`${driver.data.firstName} ${driver.data.lastName}`}
                class="w-full h-64 object-cover p-3"
              />
            </div>
            <div>
              <h1 class="text-4xl font-bold mb-4">
                {driver.data.firstName}
                <span class="">{driver.data.lastName}</span>
              </h1>
              <div class="space-y-3 text-lg">
                <div class="flex items-center">
                  <span class="font-semibold w-32">Number:</span>
                  <span class="text-gray-700"
                    >{driver.data.number}</span
                  >
                </div>
                <div class="flex items-center">
                  <span class="font-semibold w-32">Team:</span>
                  <span class="text-gray-700">{driver.data.team}</span>
                </div>
                <div class="flex items-center">
                  <span class="font-semibold w-32">Nationality:</span>
                  <span class="text-gray-700">{driver.data.nationality}</span>
                </div>
                <div class="flex items-center">
                  <span class="font-semibold w-32">Age:</span>
                  <span class="text-gray-700">{driver.data.age}</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Driver Statistics -->
      <section class="py-12 bg-slate-50">
        <div class="container mx-auto px-4">
          <h2 class="text-3xl font-bold mb-8 text-center">
            Career Statistics
          </h2>

          <div class="max-w-7xl mx-auto">
            <div class="flex flex-wrap -mx-2">
              <StatCard 
                value={driver.data.championships} 
                label="Championships" 
              />
              <StatCard 
                value={driver.data.raceWins} 
                label="Race Wins" 
              />
              <StatCard 
                value={driver.data.podiums} 
                label="Podiums" 
              />
              <StatCard 
                value={driver.data.points} 
                label="Career Points" 
              />
            </div>
          </div>
        </div>
      </section>

      <!-- Driver Biography -->
      <section class="py-12 bg-gray-50">
        <div class="prose prose-lg max-w-none">
          <Content />
        </div>
      </section>

      <!-- Back Links -->
      <section class="py-8 text-center">
        <div class="space-x-4">
          <a
            href="/seasons/2024/drivers"
            class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
          >
            ← Back to 2024 Drivers
          </a>
          <a
            href="/seasons/2024"
            class="bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded"
          >
            ← Back to 2024 Season
          </a>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
