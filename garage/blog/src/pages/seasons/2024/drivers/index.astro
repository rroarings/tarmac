---
import BaseHead from "../../../../components/BaseHead.astro";
import Header from "../../../../components/Header.astro";
import Footer from "../../../../components/Footer.astro";
import { SITE_TITLE } from "../../../../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`2024 F1 Drivers | ${SITE_TITLE}`} description="2024 Formula 1 driver profiles and statistics" />
  </head>
  <body>
    <Header />
    <main>
      <!-- Drivers Header -->
      <section class="py-16 text-center">
        <div class="container mx-auto px-4">
          <h1 class="text-4xl font-bold mb-4">2024 Formula 1 Drivers</h1>
          <p class="text-lg text-gray-700">Complete driver profiles and season statistics</p>
        </div>
      </section>

      <!-- Drivers Grid -->
      <section class="py-12">
        <div class="container mx-auto px-4">
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <!-- Driver cards will be added here -->
            <div class="bg-white border border-gray-300 rounded shadow-md overflow-hidden">
              <img src="/public/blog-placeholder-1.jpg" alt="Driver" class="w-full h-48 object-cover" />
              <div class="p-4">
                <h3 class="text-lg font-bold">Max Verstappen</h3>
                <p class="text-gray-600">Red Bull Racing</p>
                <p class="text-sm text-gray-500">#1</p>
              </div>
            </div>
            
            <div class="bg-white border border-gray-300 rounded shadow-md overflow-hidden">
              <img src="/public/blog-placeholder-2.jpg" alt="Driver" class="w-full h-48 object-cover" />
              <div class="p-4">
                <h3 class="text-lg font-bold">Lewis Hamilton</h3>
                <p class="text-gray-600">Mercedes</p>
                <p class="text-sm text-gray-500">#44</p>
              </div>
            </div>
            
            <div class="bg-white border border-gray-300 rounded shadow-md overflow-hidden">
              <img src="/public/blog-placeholder-3.jpg" alt="Driver" class="w-full h-48 object-cover" />
              <div class="p-4">
                <h3 class="text-lg font-bold">Charles Leclerc</h3>
                <p class="text-gray-600">Ferrari</p>
                <p class="text-sm text-gray-500">#16</p>
              </div>
            </div>
            
            <!-- Add more driver cards as needed -->
          </div>
        </div>
      </section>

      <!-- Back Link -->
      <section class="py-8 text-center">
        <a href="/seasons/2024" class="bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">
          ‚Üê Back to 2024 Season
        </a>
      </section>
    </main>
    <Footer />
  </body>
</html>
