---
import BaseHead from "../../../../components/BaseHead.astro";
import Header from "../../../../components/Header.astro";
import Footer from "../../../../components/Footer.astro";
import { SITE_TITLE } from "../../../../consts";
import { getCollection } from "astro:content";

// Get all teams for 2024 season
const teams = await getCollection("teams", ({ data }) => {
  return data.season === "2024";
});

// Sort teams by constructor points (desc), then by championships (desc)
const sortedTeams = teams.sort((a, b) => {
  if (b.data.constructorPoints !== a.data.constructorPoints) {
    return b.data.constructorPoints - a.data.constructorPoints;
  }
  return b.data.championships - a.data.championships;
});
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={`2024 F1 Teams | ${SITE_TITLE}`}
      description="2024 Formula 1 constructor teams and their cars"
    />
  </head>
  <body>
    <Header />
    <main>
      <!-- Teams Header -->
      <section class="py-16 text-center">
        <div class="container mx-auto px-4">
          <h1 class="text-4xl font-bold mb-4">2024 Formula 1 Teams</h1>
          <p class="text-lg text-gray-700">
            Constructor teams and their racing machines
          </p>
        </div>
      </section>

      <!-- Teams Grid -->
      <section class="py-12">
        <div class="container mx-auto px-4">
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {
              sortedTeams.map((team) => (
                <a href={`/seasons/2024/teams/${team.id}`} class="block">
                  <div class="bg-white border border-gray-300 rounded shadow-md overflow-hidden hover:shadow-lg transition-shadow">
                    <img
                      src={team.data.carImage || "/blog-placeholder-1.jpg"}
                      alt={`${team.data.name} ${team.data.carModel}`}
                      class="w-full h-48 object-cover"
                    />
                    <div class="p-4">
                      <h3 class="text-lg font-bold mb-2">{team.data.name}</h3>
                      <p class="text-gray-600 mb-2">
                        Car: {team.data.carModel}
                      </p>
                      <p class="text-sm text-gray-500 mb-3">
                        {team.data.drivers.join(" • ")}
                      </p>

                      <div class="text-sm text-gray-600 space-y-1">
                        <div class="flex justify-between items-center">
                          <span>Team Principal:</span>
                          <span class="font-medium">{team.data.principal}</span>
                        </div>
                        <div class="flex justify-between items-center">
                          <span>Engine:</span>
                          <span>{team.data.engine}</span>
                        </div>
                        <div class="flex justify-between items-center">
                          <span>Constructor Points:</span>
                          <span class="font-semibold">
                            {team.data.constructorPoints}
                          </span>
                        </div>
                        {team.data.championships > 0 && (
                          <div class="flex justify-between items-center">
                            <span>Championships:</span>
                            <span class="font-semibold text-yellow-600">
                              {team.data.championships}
                            </span>
                          </div>
                        )}
                      </div>
                    </div>
                  </div>
                </a>
              ))
            }
          </div>
        </div>
      </section>

      <!-- Back Link -->
      <section class="py-8 text-center">
        <a
          href="/seasons/2025"
          class="bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded"
        >
          ← Back to 2025 Season
        </a>
      </section>
    </main>
    <Footer />
  </body>
</html>
