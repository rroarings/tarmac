---
import BaseHead from "../../../../components/BaseHead.astro";
import Header from "../../../../components/Header.astro";
import Footer from "../../../../components/Footer.astro";
import { SITE_TITLE } from "../../../../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`2024 F1 Teams | ${SITE_TITLE}`} description="2024 Formula 1 constructor teams and their cars" />
  </head>
  <body>
    <Header />
    <main>
      <!-- Teams Header -->
      <section class="py-16 text-center">
        <div class="container mx-auto px-4">
          <h1 class="text-4xl font-bold mb-4">2024 Formula 1 Teams</h1>
          <p class="text-lg text-gray-700">Constructor teams and their racing machines</p>
        </div>
      </section>

      <!-- Teams Grid -->
      <section class="py-12">
        <div class="container mx-auto px-4">
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Team cards -->
            <div class="bg-white border border-gray-300 rounded shadow-md overflow-hidden">
              <img src="/public/blog-placeholder-1.jpg" alt="Team Car" class="w-full h-48 object-cover" />
              <div class="p-4">
                <h3 class="text-lg font-bold">Red Bull Racing</h3>
                <p class="text-gray-600">RB20</p>
                <p class="text-sm text-gray-500">Max Verstappen • Sergio Pérez</p>
              </div>
            </div>
            
            <div class="bg-white border border-gray-300 rounded shadow-md overflow-hidden">
              <img src="/public/blog-placeholder-2.jpg" alt="Team Car" class="w-full h-48 object-cover" />
              <div class="p-4">
                <h3 class="text-lg font-bold">Mercedes</h3>
                <p class="text-gray-600">W15</p>
                <p class="text-sm text-gray-500">Lewis Hamilton • George Russell</p>
              </div>
            </div>
            
            <div class="bg-white border border-gray-300 rounded shadow-md overflow-hidden">
              <img src="/public/blog-placeholder-3.jpg" alt="Team Car" class="w-full h-48 object-cover" />
              <div class="p-4">
                <h3 class="text-lg font-bold">Ferrari</h3>
                <p class="text-gray-600">SF-24</p>
                <p class="text-sm text-gray-500">Charles Leclerc • Carlos Sainz</p>
              </div>
            </div>
            
            <div class="bg-white border border-gray-300 rounded shadow-md overflow-hidden">
              <img src="/public/blog-placeholder-4.jpg" alt="Team Car" class="w-full h-48 object-cover" />
              <div class="p-4">
                <h3 class="text-lg font-bold">McLaren</h3>
                <p class="text-gray-600">MCL38</p>
                <p class="text-sm text-gray-500">Lando Norris • Oscar Piastri</p>
              </div>
            </div>
            
            <!-- Add more team cards as needed -->
          </div>
        </div>
      </section>

      <!-- Back Link -->
      <section class="py-8 text-center">
        <a href="/seasons/2024" class="bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">
          ← Back to 2024 Season
        </a>
      </section>
    </main>
    <Footer />
  </body>
</html>
