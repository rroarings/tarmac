---
import BaseHead from "../../../components/BaseHead.astro"
import Header from "../../../components/Header.astro"
import Footer from "../../../components/Footer.astro"
import RaceCalendar from "../../../components/RaceCalendar.astro"
import BreakpointIndicator from "../../../components/BreakpointIndicator.astro"
import { SITE_TITLE } from "../../../consts"
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={`2024 F1 Season | ${SITE_TITLE}`}
      description="Complete 2024 Formula 1 race calendar and season overview"
    />
  </head>
  <body>
    <BreakpointIndicator />
    <Header />
    <main>
      <!-- 2024 Season Header -->
      <section class="pt-6 pb-6 text-center">
        <div class="container mx-auto px-4">
          <h1 class="text-4xl font-bold mb-4">2024 Formula 1 Season</h1>
          <p class="text-lg text-gray-700">Complete race calendar and season overview</p>
        </div>
      </section>

      <!-- Quick Links -->
      <section class="py-6">
        <div class="container mx-auto px-4">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Drivers Link -->
            <div
              class="bg-gray-100 border border-gray-300 rounded p-6 text-center flex flex-col h-full"
            >
              <div class="flex-grow">
                <i class="bi bi-person-badge text-4xl text-gray-700 mb-4"></i>
                <h3 class="text-xl">2024 Drivers</h3>
                <p class="text-gray-600 mb-4">Explore driver profiles and statistics</p>
              </div>
              <div>
                <a
                  href="/seasons/2024/drivers"
                  class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded"
                  >View Drivers</a
                >
              </div>
            </div>

            <!-- Teams Link -->
            <div
              class="bg-gray-100 border border-gray-300 rounded p-6 text-center flex flex-col h-full"
            >
              <div class="flex-grow">
                <i class="bi bi-car-front text-4xl text-gray-700 mb-4"></i>
                <h3 class="text-xl">2024 Teams</h3>
                <p class="text-gray-600 mb-4">Learn about constructor teams and their cars</p>
              </div>
              <div>
                <a
                  href="/seasons/2024/teams"
                  class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded"
                  >View Teams</a
                >
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Race Calendar -->
      <section class="py-6">
        <div class="container mx-auto px-4">
          <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold">Race Calendar</h2>
            <a
              href="/seasons/2024/races"
              class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded"
            >
              View All Races
            </a>
          </div>
          <RaceCalendar
            season="2024"
            showAllRaces={true}
          />
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
