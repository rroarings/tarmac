---
interface Props {
  date: Date;
}

const { date } = Astro.props;

// Convert to UTC date for consistent display
const utcDate = new Date(date);
utcDate.setUTCHours(0, 0, 0, 0);
---

<time datetime={utcDate.toISOString()}>
  {
    utcDate.toLocaleDateString("en-us", {
      year: "numeric",
      month: "short",
      day: "numeric",
      timeZone: "UTC",
    })
  }
</time>
