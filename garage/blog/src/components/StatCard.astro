---
interface Props {
  value: number;
  label: string;
}

const { value, label } = Astro.props;
---

<div class="w-full md:w-1/2 lg:w-1/4 p-2">
  <div
    class="h-full border border-slate-300 rounded-lg transition-all duration-300 hover:border-slate-400 hover:shadow-md bg-white"
  >
    <div class="flex flex-col justify-center items-center p-6 h-32">
      <div class="text-4xl font-bold mb-2">{value}</div>
      <div class="text-sm text-slate-600 uppercase tracking-wide text-center">
        {label}
      </div>
    </div>
  </div>
</div>
