---
interface Props {
  value: number;
  label: string;
}

const { value, label } = Astro.props;
---

<div class="w-1/2 md:w-1/3 px-2 mb-6 ">
  <div
    class="h-full border border-slate-300 rounded-lg transition-all duration-300 hover:shadow-md bg-white"
  >
    <div class="flex flex-col flex-wrap justify-center items-center p-6">
      <div class="text-4xl font-bold mb-2">{value}</div>
      <div class="text-sm text-slate-600 uppercase tracking-wide text-center">
        {label}
      </div>
    </div>
  </div>
</div>
