---
interface Props {
  title: string;
  description: string;
  ctaText?: string;
  ctaLink?: string;
  imageSrc?: string;
  imageAlt?: string;
  reversed?: boolean;
  background?: 'white' | 'gray';
}

const { 
  title, 
  description, 
  ctaText, 
  ctaLink, 
  imageSrc, 
  imageAlt = '', 
  reversed = false,
  background = 'white'
} = Astro.props;

const bgClass = background === 'gray' ? 'bg-gray-50' : 'bg-white';
---

<section class={`py-12 ${bgClass}`}>
  <div class="max-w-7xl mx-auto px-4">
    <div class={`grid grid-cols-1 md:grid-cols-2 gap-8 items-center ${reversed ? 'md:flex-row-reverse' : ''}`}>
      <!-- Text Content -->
      <div class={reversed ? 'md:pl-8' : 'md:pr-8'}>
        <h2 class="text-2xl font-bold mb-4">{title}</h2>
        <p class="mb-4 text-gray-700">
          {description}
        </p>
        {ctaText && ctaLink && (
          <a
            href={ctaLink}
            class="inline-block text-red-600 hover:text-blue-600 py-2"
          >
            {ctaText}
          </a>
        )}
      </div>
      <!-- Image -->
      <div class="flex justify-center">
        {imageSrc ? (
          <img 
            src={imageSrc} 
            alt={imageAlt}
            class="w-full max-w-md rounded-lg shadow-md object-cover"
          />
        ) : (
          <div
            class="w-full max-w-md aspect-video bg-gray-200 flex items-center justify-center rounded shadow"
          >
            <span class="text-gray-400 text-lg">[Placeholder Image]</span>
          </div>
        )}
      </div>
    </div>
  </div>
</section>
